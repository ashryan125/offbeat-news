<article>
  <a id="dashboard-back" class="url" href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>

  <section class="card mx-auto mt-4 item-width">
    <div class="card bg-dark">
      <div class="card-body">

        <form class="form" id="edit-post-form">
          <div>
            <label class="url" for="post-title">Title</label>
            <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
          </div>
          <div>
            <label class="url mt-2" for="post-url">Link</label>
            <input class="form-control" name="post-url" type="text" value="{{post.post_url}}" />
          </div>
          <div>
            <label class="url mt-2" for="review">Review (160 characters)</label>
            <input class="form-control" type="text" id="review" name="review" value="{{post.post_contents}}" />
          </div>

          <div class="url mt-2">
            {{post.upvotesCount}} {{format_plural "upvote" post.upvotesCount}}
            {{post.downvotesCount}} {{format_plural "downvote" post.downvotesCount}}
            |
            <a class="url" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
              post.comments.length}}</a>
          </div>

          <button class="btn btn-secondary mt-3" type="submit">Save post</button>
          <button class="btn btn-secondary mt-3" type="button" id="delete-post-btn">Delete post</button>

        </form>
      </div>
    </div>
  </section>
</article>


<section class="card mx-auto mt-4 item-width">
  <div class="card bg-dark">
    <div class="card-body">

      <form class="form" id="comment-form">
        <div>
          <textarea class="form-control" name="comment-body"></textarea>
        </div>

        <div>
          <button class="btn btn-secondary mt-3" type="submit">add comment</button>
        </div>
      </form>
    </div>
  </div>
</section>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>