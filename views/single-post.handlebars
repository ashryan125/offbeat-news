{{> post-info post }}

{{#if loggedIn}}
<article class="card mx-auto mt-4 item-width">
  <div class="card bg-dark">
    <div class="card-body">

      <form class="form" id="comment-form">
        <div class="mt-2">
          <textarea class="form-control" name="comment-body"></textarea>
        </div>

        <div class="mt-3">
          <button class="btn btn-secondary me-1" type="submit">add comment</button>
          <button class="btn btn-secondary me-1" type="button" id="upvote-btn">upvote</button>
          <button class="btn btn-secondary" type="button" id="downvote-btn">downvote</button>
        </div>
        <div>

        </div>
      </form>

    </div>
  </div>
</article>
{{/if}}

